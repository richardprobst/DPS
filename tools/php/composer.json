{
  "name": "desi-pet-shower/dev-tools",
  "description": "Ferramentas de qualidade (PHPCS/WPCS, PHPStan, Psalm) para o monorepo desi.pet DPS",
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^8.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpstan/phpstan": "^1.11",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "vimeo/psalm": "^5.26"
  },
  "scripts": {
    "phpcs": "phpcs -q",
    "phpstan": "phpstan analyse -c phpstan.neon --no-progress",
    "psalm": "psalm -c psalm.xml --no-progress",
    "ci": [
      "@phpcs",
      "@phpstan",
      "@psalm"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
